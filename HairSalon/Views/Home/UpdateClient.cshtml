@using HairSalon.Models

@{
  Layout = "_Layout";
}

<div class="container">
  <h3>Updating @Model.GetName()</h3>

  <form action="/client/doupdate/@Model.GetId()" method="post">
    <div class="form-group">
      <label for="name">Name</label>
      <input id="name" name="name" type="text" class="form-control" autofocus value=@Model.GetName()>
    </div>
    <div class="form-group">
      <label for="phone">Phone</label>
      <input id="phone" name="phone" type="text" class="form-control" value=@Model.GetPhone()>
    </div>
    <div class="form-group">
      <label for="email">Email </label>
      <input id="email" name="email" type="text" class="form-control"  value=@Model.GetAddress()>
    </div>

    <button class="btn btn-success" type="submit" name="submit-check">Update Client</button>
  </form>
  <br>
  <a href="/client/@Model.GetId()"><button class="btn btn-warning" type="button" name="back-stylist">Cancel</button></a>
</div>
